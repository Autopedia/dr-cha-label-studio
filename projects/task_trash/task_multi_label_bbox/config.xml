<View style="display: flex;">
  <View style="padding: 0em 1em;  background: #f1f1f1; margin-right: 1em; border-radius: 3px">
    <View style="position: sticky; width: 300px; top: 0">

      <Choices name="category" toName="image" choice="multiple">
        <Choice value="종이" hotkey="1"/>
        <Choice value="종이팩" hotkey="2"/>
        <Choice value="캔"  hotkey="3"/>
        <Choice value="유리"  hotkey="4"/>
        <Choice value="PET"  hotkey="5"/>
        <Choice value="플라스틱"  hotkey="6" />
        <Choice value="비닐"  hotkey="7"/>
      </Choices>


    </View>
  </View>

  <Image name="image" value="$image" style="flex-grow: 1" width="100%" maxWidth="30000px" zoom="true" zoomControl="true"/>

</View>
